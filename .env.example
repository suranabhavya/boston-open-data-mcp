# ============================================================================
# Boston Open Data MCP Server - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git (it's already in .gitignore)

# ============================================================================
# Database Configuration
# ============================================================================
# Get this from your NeonDB dashboard
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+psycopg://neondb_owner:your_password@your-host.neon.tech/neondb?sslmode=require

# Database schema to use (for organizing our tables)
DATABASE_SCHEMA=boston_data

# ============================================================================
# Application Configuration
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# Boston Open Data API Configuration
# ============================================================================
# Boston's Open Data Portal base URL (no API key required - it's public!)
BOSTON_DATA_API_BASE_URL=https://data.boston.gov/api/3/action

# MBTA API (optional - for real-time transit data)
# Get a free key at: https://api-v3.mbta.com/
MBTA_API_KEY=

# ============================================================================
# Data Refresh Configuration
# ============================================================================
# How often to refresh data (in hours)
DATA_REFRESH_INTERVAL_HOURS=24

# Maximum records to fetch per API call (to avoid rate limits)
MAX_RECORDS_PER_REQUEST=10000

# ============================================================================
# CORS Configuration (for web clients)
# ============================================================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Optional: Deployment Configuration
# ============================================================================
# For production deployment (Render, Railway, etc.)
# These will be set by the hosting platform
# PORT=8000
# DATABASE_URL will be set by the hosting platform

